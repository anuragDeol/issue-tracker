<html>
    <head>
        <title>
            Issue Tracker App
        </title>
        
        <script src="https://kit.fontawesome.com/f3fe2a54a1.js" crossorigin="anonymous"></script>
        <%- style %>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    </head>

    <body>
        
        <%- include('_header'); %>      <!-- partial -->
        <main id="layout-main">
            <%- body %>
        </main>
        <%- include('_footer'); %>
        <!-- <%- script %> -->

        <script>
            // 'select2' (dependency - jquery plugin) used for multiselect
            $(document).ready(function() {
                $('#filter-label-list').select2({
                    placeholder: "Filter by Lable(s)",
                    allowClear: true
                });
            });
            $(document).ready(function() {
                $('#filter-author-list').select2({
                    placeholder: "Filter by Author",
                    allowClear: true
                });
            });
            
        </script>
    </body>
</html>
<!-- FORM::TO FILTER ISSUES ON THE BASIS OF AUTHOR --><div>
<b>Filter issues on the basis of following:</b>
    <br>
    <form action="/projects/issues/filter" method="POST">
        <b>Authors:</b>
        <select name='filterAuthor'>
            <option value=<%undefined%>>Show All</option>
            <% for(author of locals.authors) { %>
                <option value="<%=author%>"><%=author%></option>
            <% } %>
        </select>

        <select name='filterLabel' multiple>
            <option value="Severity-1">Severity-1</option>
            <option value="Severity-2">Severity-2</option>
            <option value="Severity-3">Severity-3</option>
            <option value="Severity-4">Severity-4</option>
        </select>

        <input type="hidden" name="project" value="<%=locals.project._id%>">
        <!-- <input type="submit"> -->
        <button>Filter</button>
    </form>
</div>

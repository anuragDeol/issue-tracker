<link rel="stylesheet" href="/css/project_detail.css">
<!-- SECTION::Project Detail -->
<header>
    <a href="/">Show all projects</a>
</header>
<div id="project-container">
    <p><b>Project Name:</b> <%= locals.project.name %></p>

    <!-- FORM::TO CREATE NEW ISSUE -->
    <%- include('_create-issue-form') -%>

    <!-- FORM::Search Issue (by title and description) -->
    <%- include('_search-issue-form') -%>

    <!-- FORM::TO FILTER ISSUES on the basis of author-->
    <%- include('_filter-issue-form') -%>
</div>

<!-- SECTION::Issues of this Project -->
<div id="issue-list-container">
    <!-- SECTION::List of issues -->
    <div>
        <table cellspacing="0">
            <tr>
                <th>Issue-Title</th>
                <th>Description</th>
                <th>Lable(s)</th>
                <th>Author</th>
            </tr>
        <!-- <ul> -->
            <!-- TODO::add an if condition here, i.e if no issues are there for this prject, you may show no issues here :) -->
            
            <!-- SECTION::showing all issues under current project -->
            <%if(!locals.filteredIssues) { %>
                <% for(issue of project.issues) { %>
                    <%- include('_issue') -%>
                <% } %>
            <!-- SECTION::showing only filtered issues -->
            <% } else { %>
                <% for(issue of locals.filteredIssues) { %>
                    <%- include('_issue') -%>
                <% } %>
            <% } %>
        <!-- </ul> -->
        </table>
    </div>
</div>

